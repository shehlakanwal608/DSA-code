#include <iostream>
using namespace std;

// Node class
class Node {
private:
    int data;
    Node* next;

public:
    Node(int d = 0, Node* n = nullptr) {
        data = d;     // store value
        next = n;     // next pointer
    }

    void setData(int val) { data = val; }
    void setNext(Node* n) { next = n; }

    int retreive() const { return data; }
    Node* getNext() const { return next; }
};

// List class
class List {
private:
    Node* head;
    Node* tail;

public:
    List() { head = tail = nullptr; }

    ~List() {
        while (!empty()) pop_front();
    }

    bool empty() const  { 
        return head == nullptr;
    }

    void push_back(int val) {
        Node* newNode = new Node(val);
        if (empty()) head = tail = newNode;
        else {
            tail->setNext(newNode);
            tail = newNode;
        }
    }

    int pop_front() {
        if (empty()) {
            cout << "Queue is empty.\n";
            return 0;
        }
        Node* temp = head;
        int val = head->retreive();
        head = head->getNext();
        delete temp;
        if (head == nullptr) tail = nullptr;
        return val;
    }

    int front() const {
        if (empty()) {
            cout << "Queue is empty.\n";
            return 0;
        }
        return head->retreive();
    }
};

// Queue class using List
class Queue {
private:
    List l;

public:
    bool empty() const { return l.empty(); }
    void push(int val) { l.push_back(val); }
    int pop() { return l.pop_front(); }
    int top() const { return l.front(); }
};

int main() {
    Queue q;

    q.push(10);
    q.push(20);
    q.push(30);

    cout << "Front element: " << q.top() << endl;

    q.pop();
    cout << "Front after pop: " << q.top() << endl;

    q.push(40);
    cout << "Front after push 40: " << q.top() << endl;

    return 0;
}
