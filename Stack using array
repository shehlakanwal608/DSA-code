#include <iostream>
using namespace std;

class Stack {
private:
    int stack_size;        //  elements currently stored
    int array_capacity;    // current size of the array
    int* array;            // pointer to dynamic array

    // increase capacity when array becomes full
    void double_capacity() {
        int* tmp_array = new int[2 * array_capacity];  // new bigger array

        for (int i = 0; i < array_capacity; ++i) {
            tmp_array[i] = array[i];   // copy old data
        }

        delete[] array;     // remove old array
        array = tmp_array;  // switch to new array
        array_capacity *= 2;

        cout << "Capacity doubled to " << array_capacity << endl;
    }

public:
    Stack(int n = 10) {
        stack_size = 0;
        array_capacity = (n < 1) ? 1 : n;   // capacity must be at least 1
        array = new int[array_capacity];    // create array
    }

    // destructor
    ~Stack() {
        delete[] array; 
    }

    bool empty() const {
        return stack_size == 0;
    }

    // return top element
    int top() const {
        if (empty()) {
            cout << "Stack is empty.\n";
            return 0;
        }
        return array[stack_size - 1];
    }

    // add a new element
    void push(int obj) {
        if (stack_size == array_capacity) {
            double_capacity(); 
        }
        array[stack_size] = obj; // store element
        stack_size++;            // increase size
    }

    // remove top element
    int pop() {
        if (empty()) {
            cout << "Stack is empty.\n";
            return 0;
        }
        stack_size--;          // reduce size
        return array[stack_size];  // return removed element
    }

    void display() const {
        if (empty()) {
            cout << "Stack is empty.\n";
            return;
        }

        cout << "Stack elements (top to bottom): ";
        for (int i = stack_size - 1; i >= 0; --i) {
            cout << array[i] << " ";
        }
        cout << endl;
    }
};

int main() {
    Stack st(3);

    st.push(10);
    st.push(20);
    st.push(30);
    st.display();

    st.push(40);
    st.display();

    cout << "Top element: " << st.top() << endl;

    st.pop();
    st.display();

    return 0;
}

