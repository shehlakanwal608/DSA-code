#include <iostream>
using namespace std;

class Stack {
private:
    int stack_size;       // current number of elements
    int array_capacity;   // array size
    int* array;           // dynamic array

    // double capacity when full
    void double_capacity() {
        int* temp = new int[array_capacity * 2];

        for (int i = 0; i < array_capacity; i++) {
            temp[i] = array[i];   // copy old elements
        }

        delete[] array;
        array = temp;
        array_capacity *= 2;

        cout << "Capacity doubled to " << array_capacity << endl;
    }

public:
    // constructor
    Stack(int n = 10) {
        array_capacity = (n < 1) ? 1 : n;
        stack_size = 0;
        array = new int[array_capacity];
    }

    // destructor
    ~Stack() {
        delete[] array;
    }

    // check empty
    bool empty() const {
        return stack_size == 0;
    }

    // return top value
    int top() const {
        if (empty()) {
            cout << "Stack is empty.\n";
            return 0;
        }
        return array[stack_size - 1];
    }

    // push value
    void push(int val) {
        if (stack_size == array_capacity) {
            double_capacity();
        }
        array[stack_size++] = val;   // add element then increment
    }

    // pop value
    int pop() {
        if (empty()) {
            cout << "Stack is empty.\n";
            return 0;
        }
        return array[--stack_size];   // decrement then access
    }

    // display stack
    void display() const {
        if (empty()) {
            cout << "Stack is empty.\n";
            return;
        }

        cout << "Stack elements (top to bottom): ";
        for (int i = stack_size - 1; i >= 0; i--) {
            cout << array[i] << " ";
        }
        cout << endl;
    }
};

int main() {
    Stack st(3);

    st.push(10);
    st.push(20);
    st.push(30);
    st.display();

    st.push(40); // doubling happens here
    st.display();

    cout << "Top element: " << st.top() << endl;

    st.pop();
    st.display();

    return 0;
}
