#include <iostream>
using namespace std;

class Node {
private:
    int data;        // stores value of node
    Node* next;      // pointer to next node

public:
    // Constructor with default parameters
    Node(int d = 0, Node* n = nullptr) {
        data = d;    // set data
        next = n;    // set next pointer
    }

    // Setter for data
    void setData(int val) {
        data = val;
    }

    // Setter for next pointer
    void setNext(Node* n) {
        next = n;
    }

    // Getter for data
    int retreive() const {
        return data;
    }

    // Getter for next pointer
    Node* getNext() const {
        return next;
    }
};

class CircularSinglyList {
private:
    Node* head;   // pointer to first node
    Node* tail;   // pointer to last node

public:
    // Constructor
    CircularSinglyList() {
        head = nullptr;  // initially empty
        tail = nullptr;
    }

    // Destructor: delete all nodes
    ~CircularSinglyList() {
        while (!empty()) {
            pop_front();
        }
    }

    // Check if empty
    bool empty() const {
        return head == nullptr;
    }

    // Return first element
    int front() const {
        if (empty()) {
            cout << "List is empty.\n";
        }
        else {
            return head->retreive();
        }
        return 0;
    }

    // Return last element
    int end() const {
        if (empty()) {
            cout << "List is empty.\n";
        }
        else {
            return tail->retreive();
        }
        return 0;
    }

    // Get size of list
    int size() const {
        if (empty()) return 0;

        int count = 0;
        Node* p = head;

        while (true) {
            count++;
            p = p->getNext();
            if (p == head) break;
        }
        return count;
    }

    // Count occurrences of value
    int countValue(int val) const {
        if (empty()) return 0;

        int c = 0;
        Node* p = head;

        while (true) {
            if (p->retreive() == val) c++;
            p = p->getNext();
            if (p == head) break;
        }
        return c;
    }

    // Display list
    void display() const {
        if (empty()) {
            cout << "List is empty.\n";
            return;
        }
        cout << "List elements: ";
        Node* p = head;

        while (true) {
            cout << p->retreive() << " ";
            p = p->getNext();
            if (p == head) break;
        }
        cout << endl;
    }

    // Insert at front
    void push_front(int val) {
        Node* newNode = new Node(val);

        if (empty()) {
            head = newNode;
            tail = newNode;
            newNode->setNext(head); // circular link
        }
        else {
            newNode->setNext(head); // new node next = old head
            head = newNode;         // update head
            tail->setNext(head);    // tail connects to new head
        }
    }

    // Insert at end
    void push_back(int val) {
        Node* newNode = new Node(val);

        if (empty()) {
            head = newNode;
            tail = newNode;
            newNode->setNext(head); // circular
        }
        else {
            tail->setNext(newNode); // old tail next = new node
            tail = newNode;         // update tail
            tail->setNext(head);    // circular
        }
    }

    // Delete first node
    void pop_front() {
        if (empty()) {
            cout << "List is empty.\n";
            return;
        }

        Node* temp = head;

        if (head == tail) { // single node
            head = nullptr;
            tail = nullptr;
        }
        else {
            head = head->getNext();  // move head
            tail->setNext(head);     // tail next = new head
        }
        delete temp;
    }

    // Delete last node
    void pop_back() {
        if (empty()) {
            cout << "List is empty.\n";
            return;
        }

        Node* temp = tail;

        if (head == tail) { // only one element
            head = nullptr;
            tail = nullptr;
        }
        else {
            Node* p = head;

            while (p->getNext() != tail) {
                p = p->getNext();      // find previous of tail
            }

            tail = p;                // update tail
            tail->setNext(head);     // circular link
        }
        delete temp;
    }

    // Insert at specific position
    void insertion(int pos, int val) {
        int length = size();  // total nodes

        if (pos < 0 || pos > length) {
            cout << "Invalid position.\n";
            return;
        }
        if (pos == 0) {        // front
            push_front(val);
            return;
        }
        if (pos == length) {   // end
            push_back(val);
            return;
        }

        Node* prev = head; 
        for (int i = 0; i < pos - 1; i++) {
            prev = prev->getNext();
        }

        Node* nextNode = prev->getNext();     // current node at pos
        Node* newNode = new Node(val, nextNode); // new between prev & next

        prev->setNext(newNode);               // link prev â†’ new
    }

    // Delete node at specific index
    void erase(int pos) {
        int length = size();  // total nodes

        if (pos < 0 || pos >= length) {
            cout << "Invalid position.\n";
            return;
        }
        if (pos == 0) {        // front
            pop_front();
            return;
        }
        if (pos == length - 1) {  // last
            pop_back();
            return;
        }

        Node* prev = head;    
        for (int i = 0; i < pos - 1; i++) {
            prev = prev->getNext();
        }

        Node* delNode = prev->getNext();   // node to delete
        Node* nextNode = delNode->getNext(); // node after it

        prev->setNext(nextNode);           // skip deleted node
        delete delNode;                    // free memory
    }

};

// Main function
int main() {
    CircularSinglyList li;

    li.push_front(10);
    li.push_front(20);
    li.push_back(30);
    li.push_back(40);
    li.push_back(50);

    li.display();
    cout << "Head element: " << li.front() << endl;
    cout << "Tail element: " << li.end() << endl;

    li.pop_front();
    li.display();

    li.pop_back();
    li.display();

    li.insertion(1, 60);
    li.display();

    li.erase(0);
    li.display();

    return 0;
}
